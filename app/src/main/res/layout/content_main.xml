<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.lena.schorlebuddy.MainActivity"
    android:weightSum="1">
    <!--tools:showIn="@layout/app_bar_main"-->


    <GridLayout
        android:id="@+id/grid_status"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:columnCount="4"
        android:rowCount="3">
        <ImageView
            android:id="@+id/imageview_status"
            android:src="@drawable/status"
            android:layout_width="40dp"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowSpan="3"/>

        <ImageButton
            android:id="@+id/imgBtn_profile"
            android:src="@drawable/ic_menu_camera"
            android:scaleType="fitXY"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="onProfileButtonClick"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            /><!---android:layout_width="@dimen/ImgBtn_width"
            android:layout_height="@dimen/ImgBtn_height"-->
        <TextView
            android:id="@+id/txtview_promille"
            android:background="#dddddd"
            android:layout_width="75dp"
            android:layout_height="27dp"
            android:layout_column="2"
            android:layout_row="2"
            android:textColor="@color/red"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="16dp"
           />

        <TableLayout
            android:id="@+id/table"
            android:layout_column="2"
            android:layout_rowSpan="2"
            android:layout_columnSpan="2"
            android:layout_width="220dp"
            android:layout_height="110dp"
            android:paddingTop="10dp"
            android:layout_row="0"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp">
            <TableRow>
                <TextView
                    android:id="@+id/name"
                    android:text="@string/profile_name"
                    android:layout_column="0"
                    android:layout_marginEnd="10dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    />
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_gravity="end"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/startLabel"
                    android:text="@string/start"
                    />
                <TextView
                    android:id="@+id/startTime"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/durationLabel"
                    android:text="@string/duration"/>
                <TextView
                    android:id="@+id/duration"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/soberLabel"
                    android:text="@string/sober"/>
                <TextView
                    android:id="@+id/sober"/>
            </TableRow>
        </TableLayout>
        <Button
            android:id="@+id/startButton"
            android:text="Start"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="75dp"
            android:layout_height="36dp"
            android:onClick="onStartButtonClick"/>
        <Button
            android:id="@+id/StopButton"
            android:text="Stop"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_width="75dp"
            android:layout_height="36dp"
            android:onClick="onStopButtonClick"/>
    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@android:color/darker_gray"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1">
        <ImageButton
            android:id="@+id/cheers"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_width="50dp"
            android:layout_gravity="fill_vertical"
            android:src="@drawable/cheers40"
            android:background="#0000"
            android:textStyle="bold"
            android:onClick="onCheersButtonClick"/>
        <TextView
            android:id="@+id/txtview_blend"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:gravity="center_vertical"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Cheers!!"
            android:textSize="8pt" />

    </GridLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@android:color/darker_gray"/>
    <GridLayout
        android:id="@+id/grid_bar"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:columnCount="6"
        android:rowCount="4"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageview_bar"
            android:src="@drawable/bar"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowSpan="4"
            android:layout_width="40dp"
            android:scaleType="fitXY"
            android:layout_height="match_parent"/>


        <ImageButton
            android:id="@+id/imgBtn_wein"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_width="@dimen/ImgBtn_width"
            android:layout_height="@dimen/ImgBtn_height"
            android:src="@drawable/wineglass72"
            android:background="#0000"
            android:onClick="onImageButtonClick"
            android:tag="@string/ImgBtn_wein"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:id="@+id/txtview_imgbtn_wein"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_rowSpan="2"
            android:layout_width="@dimen/ImgBtn_width"
            android:text="@string/ImgBtn_wein"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"/>
        <ImageButton
            android:id="@+id/imgBtn_schorle"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_width="@dimen/ImgBtn_width"
            android:layout_height="@dimen/ImgBtn_height"
            android:src="@drawable/schorlegif"
            android:background="#0000"
            android:onClick="onImageButtonClick"
            android:tag="@string/ImgBtn_schorle"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/txtview_imgbtn_schorle"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_rowSpan="2"
            android:layout_width="@dimen/ImgBtn_width"
            android:text="@string/ImgBtn_schorle"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"/>
        <ImageButton
            android:id="@+id/imgBtn_bier"
            android:layout_column="3"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_width="@dimen/ImgBtn_width"
            android:layout_height="@dimen/ImgBtn_height"
            android:src="@drawable/beer72"
            android:onClick="onImageButtonClick"
            android:background="#0000"
            android:tag="@string/ImgBtn_bier"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/txtview_imgbtn_bier"
            android:layout_column="3"
            android:layout_row="2"
            android:layout_rowSpan="2"
            android:layout_width="@dimen/ImgBtn_width"
            android:text="@string/ImgBtn_bier"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"/>
        <ImageButton
            android:id="@+id/imgBtn_schnaps"
            android:layout_column="4"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_width="@dimen/ImgBtn_width"
            android:layout_height="@dimen/ImgBtn_height"
            android:src="@drawable/schnapps72"
            android:background="#0000"
            android:onClick="onImageButtonClick"
            android:tag="@string/ImgBtn_schnaps"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/txtview_imgbtn_schnaps"
            android:layout_column="4"
            android:layout_row="2"
            android:layout_rowSpan="2"
            android:layout_width="@dimen/ImgBtn_width"
            android:text="@string/ImgBtn_schnaps"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"/>
        <ImageButton
            android:id="@+id/imgBtn_plus"
            android:layout_column="5"
            android:layout_row="0"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/plus_48"
            android:onClick="onPlusButtonClick"
            android:layout_marginTop="10dp"
            android:background="#0000"
            android:scaleType="fitXY"
            android:layout_marginRight="10dp"/>
        <ImageButton
            android:id="@+id/imgBtn_wasser"
            android:layout_column="5"
            android:layout_row="3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/water_48"
            android:background="#0000"
            android:onClick="onWaterButtonClick"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:layout_marginRight="10dp"/>

    </GridLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@android:color/darker_gray"/>

    <GridLayout
        android:id="@+id/grid_action"
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:columnCount="2"
        android:rowCount="1">

        <ImageView
            android:id="@+id/imageview_aktionen"
            android:src="@drawable/aktionen"
            android:layout_width="40dp"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:layout_gravity="fill_vertical"/>


        <GridLayout
            android:orientation="horizontal"
            android:layout_gravity="fill_horizontal"
            android:layout_column="1"
            android:columnCount="1"
            android:rowCount="3"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/imgBtn_standpunkt"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:padding="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Standort anzeigen"
                android:drawableLeft="@drawable/marker_24"
                android:textSize="18sp"
                android:tag="@string/ImgBtn_standort"
                android:onClick="onLocationButtonClick"/>

            <Button
                android:id="@+id/imgBtn_kamera"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:padding="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Foto aufnehmen"
                android:drawableLeft="@drawable/ic_menu_camera"
                android:textSize="18sp"
                android:tag="@string/ImgBtn_camera"
                android:onClick="onCameraButtonClick"/>

            <Button
                android:id="@+id/imgBtn_diary"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:padding="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Verlauf anzeigen"
                android:drawableLeft="@drawable/diary"
                android:textSize="18sp"
                android:tag="@string/ImgBtn_diary"
                android:onClick="onDiaryButtonClick"/>
        </GridLayout>

